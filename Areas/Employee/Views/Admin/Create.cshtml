
@model CruiseCMSDemo.Models.Admin

@{
	ViewData["Title"] = "Create";
	Layout = "~/Views/Shared/_Dashboard.cshtml";
}

<section id="main-content">
	<section class="wrapper main-wrapper row">

		<div class="col-10">
			<section class="box">
				<partial name="_HeaderEmployeeInfo" />

				<div class="content-body">
					<div class="row">
						<div class="col-md-9">

							<form method="post" asp-action="Create" enctype="multipart/form-data">
								<div class="background-white">
									<div asp-validation-summary="ModelOnly" class="text-danger"></div>
									<div class="form-group row">
											<div class="col-4">
												<label asp-for="FullName" class="form-label"></label>
											</div>
											<div class="col-8">
												<div class="controls">
													<input asp-for="FullName" class="form-control" />
												</div>
												<span asp-validation-for="FullName" class="text-danger"></span>
											</div>
										</div>
									<div class="form-group row">
										<div class="col-4">
											<label asp-for="Username" class="col-form-label"></label>
										</div>
										<div class="col-8">
											<div class="controls">
												<input asp-for="Username" class="form-control" />
											</div>
											<span asp-validation-for="Username" class="text-danger"></span>
										</div>
									</div>
									<div class="form-group row">
										<div class="col-4">
											<label asp-for="Password" class="col-form-label"></label>
										</div>
										<div class="col-8">
											<div class="controls">
												<input asp-for="Password" class="form-control" />
											</div>
											<span asp-validation-for="Password" class="text-danger"></span>
										</div>
									</div>
									<div class="form-group row">
										<div class="col-4">
											<label asp-for="EmailAddress" class="col-form-label"></label>
										</div>
										<div class="col-8">
											<div class="controls">
												<input asp-for="EmailAddress" class="form-control" />
											</div>
											<span asp-validation-for="EmailAddress" class="text-danger"></span>
										</div>
									</div>
									<div class="form-group row">
										<div class="col-4">
											<label asp-for="Image" class="col-form-label"></label>
										</div>
										<div class="col-8">
											<div class="controls">
												<input type="file" id="banner" name="pictures" class="form-control-file" multiple/>
											</div>
										</div>
									</div>
									<div class="form-group row">
										<div class="col-4">
											<label asp-for="Description" class="col-form-label"></label>
										</div>
										<div class="col-8">
											@Html.TextAreaFor(a => a.Description, 8, 30, null)
										</div>
										<span asp-validation-for="Description" class="text-danger"></span>
									</div>
									<div class="form-group row">
										<partial name="_BtnsAddAction" />
									</div>
								</div>
							</form>

						</div>
					</div>
				</div>
			</section>
		</div>
	</section>
</section>
