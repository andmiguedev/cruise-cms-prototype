
@model IEnumerable<Itinerary>

@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_Dashboard.cshtml";
}

<section id="main-content">
	<section class="wrapper main-wrapper row">
		<partial name="_HeaderPageTitle" />

		<div class="col-sm-12">
			<section class="box">
				<partial name="_HeaderTableInfo" />

				<div class="content-body">
					<div class="row">
						<div class="col-12">
							<div class="table-responsive">

								@* Check if there are any Itineraries *@
								@if (Model.Count() > 0)
								{
									<table class="table table-bordered">
										<thead>
											<tr>
												<th>
													@* Sail From column *@
													@Html.DisplayNameFor(i => i.Origin)
												</th>
												<th>
													@* Sail To column *@
													@Html.DisplayNameFor(i => i.Destination)
												</th>
												<th>
													@* Cruise starts column *@
													@Html.DisplayNameFor(i => i.StartTime)
												</th>
												<th>
													@* Date of departure column *@
													@Html.DisplayNameFor(i => i.DepartureDate)
												</th>
												<th>
													@* Date of arrival column *@
													@Html.DisplayNameFor(i => i.ArrivalDate)
												</th>
												<th>
													@* Cruise returns column *@
													@Html.DisplayNameFor(i => i.ReturnTime)
												</th>
												<th>
													@* Number of days column *@
													@Html.DisplayNameFor(i => i.NumberOfDays)
												</th>
												<th>
													<span>Admin Tasks</span>
												</th>
											</tr>
										</thead>
										<tbody>
											@* Itinerary information per Trip *@
											@foreach (var item in Model)
											{
												<tr>
													<td>
														@Html.DisplayFor(value => item.Origin)
													</td>
													<td>
														@Html.DisplayFor(value => item.Destination)
													</td>
													<td>
														@Html.DisplayFor(value => item.StartTime)
													</td>
													<td>
														@Html.DisplayFor(value => item.DepartureDate)
													</td>
													<td>
														@Html.DisplayFor(value => item.ArrivalDate)
													</td>
													<td>
														@Html.DisplayFor(value => item.ReturnTime)
													</td>
													<td>
														@Html.DisplayFor(value => item.NumberOfDays)
													</td>
													<partial name="_AdminTasksIcons" model="item.Id" />
												</tr>
											}
										</tbody>
									</table>
								@* Client Error for non existing data *@
								} else
								{
									<partial name="_EmptyTableError"/>
								}
							</div>
						</div>
					</div>
				</div>
			</section>
		</div>
	</section>
</section>
