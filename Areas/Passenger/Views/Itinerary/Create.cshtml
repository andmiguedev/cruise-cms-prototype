
@model CruiseCMSDemo.Models.Itinerary

@{
	ViewData["Title"] = "Create";
	Layout = "~/Views/Shared/_Dashboard.cshtml";
}

<section id="main-content">
	<section class="wrapper main-wrapper row">
		<partial name="_HeaderPageTitle" />

		<div class="col-12">
			<section class="box">
				<partial name="_HeaderTableInfo" />

				<div class="content-body">
					<div class="row">
						<div class="col-lg-8 col-md-9 col-10">

							<form method="post" asp-action="Create">
								<div class="background-white">
									<div asp-validation-summary="ModelOnly" class="text-danger"></div>
									<div class="form-group row">
										<div class="col-4">
											<label asp-for="Origin" class="form-label"></label>
										</div>
										<div class="col-8">
											<div class="controls">
												<input asp-for="Origin" class="form-control" />
											</div>
											<span asp-validation-for="Origin" class="text-danger"></span>
										</div>
									</div>
									<div class="form-group row">
										<div class="col-4">
											<label asp-for="Destination" class="col-form-label"></label>
										</div>
										<div class="col-8">
											<div class="controls">
												<input asp-for="Destination" class="form-control" />
											</div>
											<span asp-validation-for="Destination" class="text-danger"></span>
										</div>
									</div>
									<div class="form-group row">
										<div class="col-4">
											<label asp-for="StartTime" class="col-form-label"></label>
										</div>
										<div class="col-8">
											<div class="controls">
												<input asp-for="StartTime" class="form-control" />
											</div>
											<span asp-validation-for="StartTime" class="text-danger"></span>
										</div>
									</div>
									<div class="form-group row">
										<div class="col-4">
											<label asp-for="DepartureDate" class="col-form-label"></label>
										</div>
										<div class="col-8">
											<div class="controls">
												<input asp-for="DepartureDate" class="form-control" />
											</div>
											<span asp-validation-for="DepartureDate" class="text-danger"></span>
										</div>
									</div>
									<div class="form-group row">
										<div class="col-4">
											<label asp-for="ArrivalDate" class="col-form-label"></label>
										</div>
										<div class="col-8">
											<div class="controls">
												<input asp-for="ArrivalDate" class="form-control" />
											</div>
											<span asp-validation-for="ArrivalDate" class="text-danger"></span>
										</div>
									</div>
									<div class="form-group row">
										<div class="col-4">
											<label asp-for="ReturnTime" class="col-form-label"></label>
										</div>
										<div class="col-8">
											<div class="controls">
												<input asp-for="ReturnTime" class="form-control" />
											</div>
											<span asp-validation-for="ReturnTime" class="text-danger"></span>
										</div>
									</div>
									<div class="form-group row">
										<div class="col-4">
											<label asp-for="NumberOfDays" class="col-form-label"></label>
										</div>
										<div class="col-8">
											<div class="controls">
												<input asp-for="NumberOfDays" class="form-control" />
											</div>
											<span asp-validation-for="NumberOfDays" class="text-danger"></span>
										</div>
									</div>
									<div class="form-group row">
										<div class="col-5 offset-1 py-2">
											<input type="submit" class="btn btn-success form-control" value="Add record" />
										</div>
									</div>
								</div>
							</form>

						</div>
					</div>
				</div>
			</section>
		</div>
	</section>
</section>
