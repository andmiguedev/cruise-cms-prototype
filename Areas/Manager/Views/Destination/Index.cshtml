
@model IEnumerable<Destination>

@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_Dashboard.cshtml";
}

<section id="main-content" class=" ">
	<section class="wrapper main-wrapper row" style=''>
		<partial name="_HeaderPageTitle" />
		
		<!-- MAIN CONTENT AREA STARTS -->
		<div class="col-sm-12">
			<section class="box ">
				<partial name="_HeaderTableInfo" />
				<div class="content-body">
					<div class="row">
						<div class="col-12">
							<div class="table-responsive">

								@* Check if there are any Destinations *@
								@if (Model.Count() > 0)
								{
									<table class="table table-bordered">
										<thead>
											<tr>
												<th>@Html.DisplayNameFor(d => d.ID)</th>
												<th>@Html.DisplayNameFor(d => d.Region)</th>
												<th>@Html.DisplayNameFor(d => d.Country)</th>
												<th>@Html.DisplayNameFor(d => d.Place)</th>
												<th>@Html.DisplayNameFor(d => d.Address)</th>
												<th>@Html.DisplayNameFor(d => d.Population)</th>
											</tr>
										</thead>
										<tbody>
											@* Display every field added from Destination form *@
											@foreach (var item in Model)
											{
												<tr>
													<th scope="row">1</th>
													<td>@Html.DisplayFor(d => item.ID)</td>
													<td>@Html.DisplayFor(d => item.Region)</td>
													<td>@Html.DisplayFor(d => item.Country)</td>
													<td>@Html.DisplayFor(d => item.Place)</td>
													<td>@Html.DisplayFor(d => item.Address)</td>
													<td>@Html.DisplayFor(d => item.Population)</td>
												</tr>
												<tr>
													EDIT | DELETE | DETAILS
												</tr>
											}
										</tbody>
									</table>
								}
								else
								{
									<partial name="_EmptyTableError"/>
								}
							</div>
						</div>
					</div>
				</div>
			</section>
		</div>
	</section>
</section>